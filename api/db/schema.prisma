model User {
  id                  String     @id @default(uuid())
  email               String     @unique
  name                String?
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
  lists               List[]
  listItems           ListItem[]
}

